<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:h="https://github.com/HeBianGu"
                    xmlns:local="clr-namespace:H.Styles.Controls"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <Style x:Key="{ComponentResourceKey ResourceId=S.Separator.Default,
                                        TypeInTargetAssembly={x:Type local:SeparatorKeys}}"
           TargetType="{x:Type Separator}">
        <Setter Property="Background" Value="{DynamicResource {x:Static h:BrushKeys.BorderBrush}}" />
    </Style>

    <Style x:Key="{ComponentResourceKey ResourceId=S.Separator.Vertical,
                                        TypeInTargetAssembly={x:Type local:SeparatorKeys}}"
           BasedOn="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}"
           TargetType="{x:Type Separator}">
        <Setter Property="Background" Value="{DynamicResource {x:Static h:BrushKeys.BorderBrush}}" />
        <Setter Property="Width" Value="1" />
    </Style>
</ResourceDictionary>
