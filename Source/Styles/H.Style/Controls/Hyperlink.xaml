    <Style x:Key="{ComponentResourceKey ResourceId=S.Hyperlink.Default,
                                        TypeInTargetAssembly={x:Type local:HyperlinkKeys}}"
           TargetType="Hyperlink">
        <Setter Property="Foreground" Value="{DynamicResource {x:Static BrushKeys.Accent}}" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Foreground">
                    <Setter.Value>
                        <SolidColorBrush Opacity="0.6"
                                         Color="{DynamicResource {x:Static ColorKeys.Accent}}" />
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style BasedOn="{StaticResource {x:Static local:HyperlinkKeys.Default}}"
           TargetType="Hyperlink" />
</ResourceDictionary>