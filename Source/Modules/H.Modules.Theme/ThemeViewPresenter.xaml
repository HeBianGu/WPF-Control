<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:local="clr-namespace:H.Modules.Theme"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DataTemplate DataType="{x:Type local:ThemeViewPresenter}">
        <UniformGrid>
            <TextBlock Text="{Binding MyName}" FontSize="20"/>
            <TextBlock Text="{Binding Source={x:Static local:ThemeOptions.Instance},Path=MyName}"/>
            <TextBlock Text="{Binding Source={x:Static local:ThemeOptions.Instance},Path=ColorType}"/>
        </UniformGrid>
    </DataTemplate>
</ResourceDictionary>