                                        Content="跳过指南&gt;&gt;" />
                                <Button x:Name="bt_next"
                                        Margin="5,0"
                                        HorizontalAlignment="Left"
                                        Background="{DynamicResource {x:Static h:BrushKeys.Orange}}"
                                        Command="{x:Static local:GuideBox.NextCommand}"
                                        Content="下一步"
                                        Foreground="White" />
                            </DockPanel>

                            <DockPanel DockPanel.Dock="Top">
                                <Border Width="30"
