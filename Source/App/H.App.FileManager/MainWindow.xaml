                                                    <TextBlock Text="{Binding Model.Title}" />
                                                    <TextBlock FontSize="{DynamicResource {x:Static h:FontSizeKeys.Header6}}"
                                                               Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundAssist}}"
