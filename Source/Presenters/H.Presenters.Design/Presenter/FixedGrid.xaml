<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:h="https://github.com/HeBianGu"
                    xmlns:local="clr-namespace:H.Presenters.Design.Presenter">
    <Style x:Key="{ComponentResourceKey ResourceId=S.FixedGrid.Default,
                                        TypeInTargetAssembly={x:Type local:FixedGrid}}"
           TargetType="{x:Type local:FixedGrid}">
        <Setter Property="MinRowHeight" Value="{DynamicResource {x:Static h:LayoutKeys.RowHeight}}" />
        <Setter Property="GridLinePen" Value="{DynamicResource {x:Static h:BrushKeys.BorderBrush}}" />
    </Style>
    <Style BasedOn="{StaticResource {x:Static local:FixedGrid.DefaultKey}}"
           TargetType="{x:Type local:FixedGrid}" />
</ResourceDictionary>