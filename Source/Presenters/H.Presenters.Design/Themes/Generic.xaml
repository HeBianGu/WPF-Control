<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:h="https://github.com/HeBianGu"
                    xmlns:lp="clr-namespace:H.Presenters.Design.Presenter"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/H.Presenters.Design;component/Presenter/DesignBorder.xaml" />
        <ResourceDictionary Source="pack://application:,,,/H.Presenters.Design;component/Presenter/FixedGrid.xaml" />
        <ResourceDictionary Source="pack://application:,,,/H.Presenters.Design;component/Presenter/HexGrid.xaml" />
        <ResourceDictionary Source="pack://application:,,,/H.Presenters.Design;component/Presenter/PanelPresenter.xaml" />
        <ResourceDictionary Source="pack://application:,,,/H.Presenters.Design;component/Presenter/CardPresenter.xaml" />
        <ResourceDictionary Source="pack://application:,,,/H.Presenters.Design;component/Presenter/DataGridDesignPresenter.xaml" />
        <ResourceDictionary Source="pack://application:,,,/H.Presenters.Design;component/Presenter/DateTimeNowPresenter.xaml" />
        <ResourceDictionary Source="pack://application:,,,/H.Presenters.Design;component/Presenter/DefinitionGridPresenter.xaml" />
        <ResourceDictionary Source="pack://application:,,,/H.Presenters.Design;component/Presenter/FixedGridPresenter.xaml" />
        <ResourceDictionary Source="pack://application:,,,/H.Presenters.Design;component/Presenter/GridAreaPresenter.xaml" />
        <ResourceDictionary Source="pack://application:,,,/H.Presenters.Design;component/Presenter/ImagePresenter.xaml" />
        <ResourceDictionary Source="pack://application:,,,/H.Presenters.Design;component/Presenter/TextBlockPresenter.xaml" />
        <ResourceDictionary Source="pack://application:,,,/H.Presenters.Design;component/Presenter/TitlePresenter.xaml" />
        <ResourceDictionary Source="pack://application:,,,/H.Presenters.Design;component/Presenter/UniformGridPresenter.xaml" />
        <ResourceDictionary Source="pack://application:,,,/H.Presenters.Design;component/Presenter/UserPresenter.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="{ComponentResourceKey ResourceId=S.TextBlock.Binding,
                                        TypeInTargetAssembly={x:Type lp:TextBlockKeys}}"
           TargetType="TextBlock">
        <Setter Property="Foreground" Value="{Binding Foreground}" />
        <Setter Property="FontSize" Value="{Binding FontSize}" />
        <Setter Property="Text" Value="{Binding Text}" />
        <Setter Property="FontFamily" Value="{Binding FontFamily}" />
        <Setter Property="FontStretch" Value="{Binding FontStretch}" />
        <Setter Property="FontWeight" Value="{Binding FontWeight}" />
        <Setter Property="FontStyle" Value="{Binding FontStyle}" />
        <Setter Property="Opacity" Value="{Binding Opacity}" />
        <Setter Property="Height" Value="{Binding Height}" />
        <Setter Property="Margin" Value="{Binding Margin}" />
        <Setter Property="Visibility" Value="{Binding IsVisible, Converter={x:Static h:Converter.GetTrueToVisible}}" />
        <Setter Property="IsEnabled" Value="{Binding IsEnabled}" />
        <Setter Property="HorizontalAlignment" Value="{Binding HorizontalAlignment}" />
        <Setter Property="VerticalAlignment" Value="{Binding VerticalAlignment}" />
        <Setter Property="Padding" Value="{Binding Padding}" />
    </Style>
</ResourceDictionary>
