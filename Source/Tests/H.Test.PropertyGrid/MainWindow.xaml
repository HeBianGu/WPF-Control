<Window x:Class="H.Test.PropertyGrid.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:H.Test.PropertyGrid"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow"
        Width="800"
        Height="450"
        xmlns:h="https://github.com/HeBianGu"
        Style="{StaticResource {x:Type Window}}"
        mc:Ignorable="d">
    <DockPanel>
        <h:PropertyGrid SelectedObject="{Binding ElementName=btn}" DockPanel.Dock="Right" Width="350">
            <!--<h:SystemPropertyGrid.SelectedObject>
                <h:Student/>
            </h:SystemPropertyGrid.SelectedObject>-->
        </h:PropertyGrid>
        <Button x:Name="btn"/>
    </DockPanel>
</Window>
