                    </RibbonButton>
                    <RibbonButton Label="Ribbon Button">
                        <RibbonButton.ControlSizeDefinition>
                            <RibbonControlSizeDefinition ImageSize="Large"
                                                         IsLabelVisible="True" />
                        </RibbonButton.ControlSizeDefinition>
                        &gt;
                    </RibbonButton>
                    <RibbonButton Label="Ribbon Button">
                        <RibbonButton.ControlSizeDefinition>
                            <RibbonControlSizeDefinition ImageSize="Large"
                                                         IsLabelVisible="True" />
                        </RibbonButton.ControlSizeDefinition>
                        &gt;
                    </RibbonButton>
                    <RibbonButton Label="Ribbon Button">
                        <RibbonButton.ControlSizeDefinition>
                            <RibbonControlSizeDefinition ImageSize="Large"
                                                         IsLabelVisible="True" />
                        </RibbonButton.ControlSizeDefinition>
                        &gt;
                    </RibbonButton>
                    <RibbonButton Label="Ribbon Button">
                        <RibbonButton.ControlSizeDefinition>
                            <RibbonControlSizeDefinition ImageSize="Large"
                                                         IsLabelVisible="True" />
                        </RibbonButton.ControlSizeDefinition>
                        &gt;
