<Window x:Class="H.Test.Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:H.Test.Project"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow"
        Width="800"
        Height="450"
        Style="{StaticResource {x:Static WindowKeys.Default}}"
        mc:Ignorable="d">
    <DockPanel>
        <DockPanel DockPanel.Dock="Top" WindowChrome.IsHitTestVisibleInChrome="True">
            <Menu DockPanel.Dock="Left">
                <Menu.Resources>
                    <Style BasedOn="{StaticResource {x:Static MenuItemKeys.BindCommand}}"
                        TargetType="MenuItem" />
                </Menu.Resources>
                <MenuItem Background="Transparent"
                       Header="文件">
                    <MenuItem Command="{ShowNewProjectCommand}" />
                    <MenuItem Command="{ShowProjectsCommand}" />
                    <MenuItem Command="{ShowEditProjectCommand}" />
                    <MenuItem Command="{ShowSaveProjectCommand}" />
                    <MenuItem Command="{ShowCurrentProjectFileCommand}" />
                    <MenuItem Cattach.Icon="{x:Static FontIcons.Calendar}"
                           Header="最近的项目"
                           ItemsSource="{Binding Source={x:Static IocProject.Instance}, Path=Collection}">
                        <MenuItem.ItemContainerStyle>
                            <Style TargetType="MenuItem">
                                <Setter Property="Command" Value="{ShowOpenProjectCommand}" />
                                <Setter Property="CommandParameter" Value="{Binding}" />
                                <Setter Property="Height" Value="50" />
                                <Setter Property="MinWidth" Value="400" />
                            </Style>
                        </MenuItem.ItemContainerStyle>
                    </MenuItem>
                    <Separator />
                    <MenuItem Cattach.Icon="{x:Static FontIcons.PowerButton}"
                           Command="{CloseAfterSaveWindowCommand}"
                           CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                           Header="退出" />
                </MenuItem>
            </Menu>

            <TextBlock HorizontalAlignment="Center"
                    VerticalAlignment="Center">
             <Hyperlink Command="{ShowProjectsCommand}">
                 <Run Text="项目名称：" />
                 <Run Text="{Binding Source={x:Static IocProject.Instance}, Path=Current.Title}" />
             </Hyperlink>
            </TextBlock>
        </DockPanel>
        <TabControl>
            <TabItem Header="UserProjectService">
                <DockPanel>
                    <DockPanel Margin="2"
                               DockPanel.Dock="Top"
                               LastChildFill="False">
                        <Button Command="{ShowProjectsCommand}"
                                Content="打开项目列表" />
                        <Button Command="{ShowNewProjectCommand}"
                                Content="新建项目" />
                        <Button Command="{ShowSaveProjectCommand}"
                                Content="保存当前项目" />
                        <Button Command="{ShowSaveProjectsCommand}"
                                Content="保存项目列表" />
                        <Button Command="{ShowCurrentProjectFileCommand}"
                                Content="显示当前项目文件" />
                    </DockPanel>
                    <ContentPresenter Content="{Binding Source={x:Static IocProject.Instance}, Path=Current}">
                        <ContentPresenter.ContentTemplate>
                            <DataTemplate>
                                <GroupBox Margin="2"
                                          Header="当前项目">
                                    <UniformGrid HorizontalAlignment="Center"
                                                 VerticalAlignment="Center"
                                                 Columns="1">
                                        <TextBlock Text="{Binding Title}" />
                                        <TextBlock Text="{Binding Path}" />
                                        <TextBlock Text="{Binding Value}" />
                                    </UniformGrid>
                                </GroupBox>
                            </DataTemplate>
                        </ContentPresenter.ContentTemplate>
                    </ContentPresenter>
                </DockPanel>
            </TabItem>
            <TabItem Header="IProjectViewPresenter">
                <ContentPresenter VerticalAlignment="Bottom"
                                  Content="{Ioc Type={x:Type IProjectViewPresenter}}" />
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
