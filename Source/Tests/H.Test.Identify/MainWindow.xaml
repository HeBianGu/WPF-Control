<h:MainWindow x:Class="H.Test.Identify.MainWindow"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
              xmlns:h="https://github.com/HeBianGu"
              xmlns:local="clr-namespace:H.Test.Identify"
              xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
              Title="MainWindow"
              Width="1100"
              Height="650"
              CaptionHeight="50"
              WindowStartupLocation="CenterScreen"
              mc:Ignorable="d">
    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>
    <h:MainWindow.CaptionTempate>
        <ControlTemplate>
            <DockPanel LastChildFill="False" HorizontalAlignment="Right">
                <ContentPresenter Content="{Ioc Type={x:Type ISettingButtonPresenter}}" />
            </DockPanel>
        </ControlTemplate>
    </h:MainWindow.CaptionTempate>
    <Grid>
        <TabControl BorderThickness="1" BorderBrush="{DynamicResource {x:Static h:BrushKeys.BorderBrush}}">
            <TabItem Header="用户管理">
                <ContentPresenter Content="{Ioc Type={x:Type h:IUserViewPresenter}}" />
            </TabItem>
            <TabItem Header="角色管理">
                <ContentPresenter Content="{Ioc Type={x:Type h:IRoleViewPresenter}}" />
            </TabItem>
            <TabItem Header="权限管理">
                <ContentPresenter Content="{Ioc Type={x:Type h:IAuthorityViewPresenter}}" />
            </TabItem>
            <TabItem Header="操作日志">
                <ContentPresenter Content="{Ioc Type={x:Type h:IOperationViewPresenter}}" />
            </TabItem>
            <TabItem Header="操作日志图表">
                <TabControl BorderThickness="1" TabStripPlacement="Bottom" BorderBrush="{DynamicResource {x:Static h:BrushKeys.BorderBrush}}">
                    <TabItem Header="用户登录次数">
                        <ContentPresenter Margin="100" Content="{Binding Bar}" />
                    </TabItem>
                    <TabItem Header="用户操作日志数量对比图">
                        <ContentPresenter Margin="100" Content="{Binding Pie}" />
                    </TabItem>
                    <TabItem Header="用户登录次数">
                        <ContentPresenter Margin="100" Content="{Binding Radar}" />
                    </TabItem>
                    <TabItem Header="近7天用户登录次数">
                        <ContentPresenter Margin="100" Content="{Binding Line}" />
                    </TabItem>
                </TabControl>
            </TabItem>
        </TabControl>
    </Grid>
</h:MainWindow>
