                                       MarkStyle="{DynamicResource {x:Static h:EllipseMarker.Default2Key}}" />
                        </h:Series>
                    </h:Chart>
                </GroupBox>
            </StackPanel>
        </TabItem>
        <TabItem Header="Bar">
            <ScrollViewer>
                <StackPanel>
