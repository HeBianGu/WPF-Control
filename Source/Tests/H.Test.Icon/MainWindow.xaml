<Window
    x:Class="H.Test.Icon.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:H.Test.Icon"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="1200"
    Height="750"
    mc:Ignorable="d">
    <Window.Resources />
    <TabControl TabStripPlacement="Left">
        <!--  https://learn.microsoft.com/zh-cn/windows/apps/design/style/segoe-fluent-icons-font  -->
        <!--  前缀介于“E0-”到“E5-”（例如 E001、E5B1）的字形当前被标记为旧版，因此不推荐使用。  -->
        <TabItem Header="PUA E700-E900">
            <ContentPresenter Content="{GetIconSegoes}" />
        </TabItem>
        <TabItem Header="PUA EA00-EC00">
            <ContentPresenter Content="{GetIconSegoes From=0xEA00, To=0xEC00}" />
        </TabItem>
        <TabItem Header="PUA ED00-EF00">
            <ContentPresenter Content="{GetIconSegoes From=0xED00, To=0xEF00}" />
        </TabItem>
        <TabItem Header="PUA F000-F200">
            <ContentPresenter Content="{GetIconSegoes From=0xF000, To=0xF200}" />
        </TabItem>
        <TabItem Header="PUA F300-F500">
            <ContentPresenter Content="{GetIconSegoes From=0xF300, To=0xF500}" />
        </TabItem>
        <TabItem Header="PUA F600-F800">
            <ContentPresenter Content="{GetIconSegoes From=0xF600, To=0xF800}" />
        </TabItem>
        <TabItem Header="PUA E000-EFFF">
            <ContentPresenter Content="{GetIconSegoes From=0xE000, To=0xEFFF}" />
        </TabItem>
        <TabItem Header="PUA F000-FFFF">
            <ContentPresenter Content="{GetIconSegoes From=0xF000, To=0xFFFF}" />
        </TabItem>
        <TabItem Header="Button">
            <ItemsControl>
                <Button Content="&#xE77B;" FontFamily="Segoe MDL2 Assets" />
                <Button Content="&#xE77B;" FontFamily="Segoe Fluent Icons" />
                <Button Style="{DynamicResource {x:Static ButtonKeys.Default}}">
                    <FontIcon />
                </Button>
            </ItemsControl>
        </TabItem>

        <TabItem Header="TextBlock">
            <ItemsControl>
                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE710;" />
                <TextBlock FontFamily="Segoe Fluent Icons" Text="&#xE77B;" />
            </ItemsControl>
        </TabItem>

        <TabItem Header="FontIcon">
            <ItemsControl>
                <FontIcon Text="&#xE710;" />
            </ItemsControl>
        </TabItem>
        <TabItem Header="FontIconButton">
            <ItemsControl>
                <FontIconButton Content="&#xE710;" />
            </ItemsControl>
        </TabItem>

        <TabItem Header="FontIconToggleButton">
            <ItemsControl>
                <FontIconToggleButton />
                <FontIconToggleButton CheckedGlyph="&#xEDB5;" UncheckedGlyph="&#xEF3B;" />
            </ItemsControl>
        </TabItem>

        <TabItem Header="GetFontIcons">
            <DockPanel>
                <TextBox
                    x:Name="tx"
                    DockPanel.Dock="Top"
                    FontSize="20" />
                <TabControl>
                    <TabItem Header="ListBox">
                        <ListBox ItemsSource="{GetFontIcons}" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <b:Interaction.Behaviors>
                                <ItemsControlSearchTextBehavior SearchText="{Binding ElementName=tx, Path=Text, IsAsync=True}" />
                            </b:Interaction.Behaviors>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <GroupBox Header="{Binding Item1}">
                                        <Grid>
                                            <FontIcon
                                                Margin="20"
                                                FontSize="100"
                                                Text="{Binding Item2}" />
                                            <Button
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Top"
                                                Command="{ClipBoardCopyTextCommand}"
                                                CommandParameter="{Binding Item3}"
                                                Content="{Binding Item3}" />
                                            <Button
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Bottom"
                                                Command="{ClipBoardCopyTextCommand}"
                                                CommandParameter="{Binding Item4}"
                                                Content="{Binding Item4}" />
                                        </Grid>
                                    </GroupBox>

                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ListBox>
                    </TabItem>
                    <TabItem Header="Grid">
                        <DataGrid AutoGenerateColumns="False" ItemsSource="{GetFontIcons}">
                            <b:Interaction.Behaviors>
                                <ItemsControlSearchTextBehavior SearchText="{Binding ElementName=tx, Path=Text, IsAsync=True}" />
                            </b:Interaction.Behaviors>
                            <DataGrid.Columns>
                                <DataGridTemplateColumn Width="100" Header="Icon">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <FontIcon FontSize="100" Text="{Binding Item2}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Width="*" Header="Name">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock FontSize="50" Text="{Binding Item1}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Width="100" Header="Copy">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button
                                                Command="{ClipBoardCopyTextCommand}"
                                                CommandParameter="{Binding Item3}"
                                                Content="{Binding Item3}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Width="100" Header="Copy">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button
                                                Command="{ClipBoardCopyTextCommand}"
                                                CommandParameter="{Binding Item4}"
                                                Content="{Binding Item4}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>
                </TabControl>
            </DockPanel>
        </TabItem>
    </TabControl>
</Window>
