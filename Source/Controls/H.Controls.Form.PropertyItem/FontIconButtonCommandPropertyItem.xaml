<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:h="https://github.com/HeBianGu"
                    xmlns:local="clr-namespace:H.Controls.Form.PropertyItem">
    <DataTemplate DataType="{x:Type local:FontIconButtonCommandPropertyItem}">
        <FontIconButton x:Name="btn"
                        HorizontalAlignment="Left"
                        Command="{Binding Value}"
                        Content="{Binding Icon}"
                        IsEnabled="{Binding ReadOnly, Converter={x:Static h:Converter.GetTrueToFalse}}">
            <Button.ToolTip>
                <ToolTip>
                    <BulletDecorator>
                        <BulletDecorator.Bullet>
                            <TextBlock Text="{Binding HotKey}" />
                        </BulletDecorator.Bullet>
                        <TextBlock Text="{Binding Description}" />
                    </BulletDecorator>
                </ToolTip>
            </Button.ToolTip>
        </FontIconButton>
    </DataTemplate>
</ResourceDictionary>