<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:H.Controls.Form.PropertyItem.ComboBoxPropertyItems">
    <DataTemplate DataType="{x:Type local:FormComboBoxPropertyItem}">
        <DockPanel>
            <ComboBox Cattach.UseGuide="False"
                      DisplayMemberPath="{Binding DisplayMemberPath}"
                      DockPanel.Dock="Top"
                      ItemsSource="{Binding Collection}"
                      SelectedItem="{Binding Value}"
                      SelectedValuePath="{Binding SelectedValuePath}" />
            <Form Padding="0"
                  SelectObject="{Binding Value}" />
        </DockPanel>
    </DataTemplate>
</ResourceDictionary>