    <DataTemplate x:Key="S.NodeGroupsDiagramData.NodeGroups.Popup"
                  DataType="{x:Type ldb:NodeGroupsDiagramDataBase}">
        <ItemsControl Margin="0,20,0,0"
                      ItemsSource="{Binding NodeGroups}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Background="Transparent">
                        <b:Interaction.Behaviors>
                            <MouseOverContextMenuBehavior />
                        </b:Interaction.Behaviors>
                        <Border.ContextMenu>
                            <ContextMenu Placement="Right">
                                <ContextMenu.Template>
                                    <ControlTemplate>
                                        <GroupBox Background="{DynamicResource {x:Static BrushKeys.Background}}"
                                                  BorderBrush="{DynamicResource {x:Static BrushKeys.BorderBrush}}"
                                                  Header="{Binding Name}">
                                            <ItemsControl ItemsSource="{Binding NodeDatas}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <UniformGrid Columns="2" />
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                            </ItemsControl>
                                        </GroupBox>
                                    </ControlTemplate>
                                </ContextMenu.Template>
                            </ContextMenu>
                        </Border.ContextMenu>
                        <FontIconToggleButton Margin="0,5"
                                              CheckedGlyph="&#xE725;"
                                              FontSize="25"
                                              IsChecked="{Binding RelativeSource={RelativeSource AncestorType=Border}, Path=ContextMenu.IsOpen}"
                                              IsHitTestVisible="False"
                                              UncheckedGlyph="{Binding Icon}" />
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </DataTemplate>
