<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:lf="clr-namespace:H.Controls.Diagram.Presenter.Flowables"
                    xmlns:local="clr-namespace:H.Controls.Diagram.Presenter">
    <DataTemplate DataType="{x:Type lf:FlowableInvokeMode}">
        <TextBlock x:Name="t" />
        <DataTemplate.Triggers>
            <DataTrigger Binding="{Binding}"
                         Value="Serial">
                <Setter TargetName="t" Property="Text" Value="串行（顺序依次执行）" />
            </DataTrigger>
            <DataTrigger Binding="{Binding}"
                         Value="Parallel">
                <Setter TargetName="t" Property="Text" Value="并行（多线程并列执行）" />
            </DataTrigger>
        </DataTemplate.Triggers>
    </DataTemplate>
</ResourceDictionary>