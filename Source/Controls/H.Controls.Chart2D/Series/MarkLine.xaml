<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:h="https://github.com/HeBianGu"
                    xmlns:local="clr-namespace:H.Controls.Chart2D"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../Provider/Layer.xaml" />
        <ResourceDictionary Source="../Marker/Marker.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="{ComponentResourceKey ResourceId=S.MarkLine.Default,
                                        TypeInTargetAssembly={x:Type local:MarkLine}}"
           BasedOn="{StaticResource {x:Static h:Layer.DefaultKey}}"
           TargetType="{x:Type local:MarkLine}">
        <Setter Property="MarkStyle" Value="{StaticResource {x:Static h:EllipseMarker.Default10Key}}" />
        <Setter Property="Foreground" Value="{Binding RelativeSource={RelativeSource AncestorType=local:Series}, Path=Foreground}" />
        <Setter Property="PathStyle">
            <Setter.Value>
                <Style TargetType="Path">
                    <Setter Property="StrokeThickness" Value="1" />
                    <Setter Property="StrokeDashArray" Value="5 5" />
                    <Setter Property="Stroke" Value="{Binding RelativeSource={RelativeSource AncestorType=local:Series}, Path=Foreground}" />
                    <Setter Property="Fill" Value="{Binding RelativeSource={RelativeSource AncestorType=local:Series}, Path=Foreground}" />
                </Style>
            </Setter.Value>
        </Setter>

        <Setter Property="TrangleStyle">
            <Setter.Value>
                <Style TargetType="Path">
                    <Setter Property="StrokeThickness" Value="1" />
                    <Setter Property="Stroke" Value="{Binding RelativeSource={RelativeSource AncestorType=local:Series}, Path=Foreground}" />
                    <Setter Property="Fill" Value="{Binding RelativeSource={RelativeSource AncestorType=local:Series}, Path=Foreground}" />
                </Style>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="{ComponentResourceKey ResourceId=S.MarkLine.Horizontal,
                                        TypeInTargetAssembly={x:Type local:MarkLine}}"
           BasedOn="{StaticResource {x:Static h:MarkLine.DefaultKey}}"
           TargetType="{x:Type local:MarkLine}">
        <Setter Property="PathStyle">
            <Setter.Value>
                <Style TargetType="Path">
                    <Setter Property="StrokeThickness" Value="1" />
                    <Setter Property="StrokeDashArray" Value="5 5" />
                    <Setter Property="Stroke" Value="{Binding RelativeSource={RelativeSource AncestorType=local:Series}, Path=Foreground}" />
                    <Setter Property="Fill" Value="{Binding RelativeSource={RelativeSource AncestorType=local:Series}, Path=Foreground}" />
                    <Style.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ThicknessAnimation Storyboard.TargetProperty="Margin"
                                                        From="-1000,0,0,0"
                                                        To="0,0,0,0"
                                                        Duration="0:0:0.5" />
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                     From="0.5"
                                                     To="1"
                                                     Duration="0:0:0.5" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Style.Triggers>
                </Style>
            </Setter.Value>
        </Setter>

        <Setter Property="TrangleStyle">
            <Setter.Value>
                <Style TargetType="Path">
                    <Setter Property="StrokeThickness" Value="1" />
                    <Setter Property="Stroke" Value="{Binding RelativeSource={RelativeSource AncestorType=local:Series}, Path=Foreground}" />
                    <Setter Property="Fill" Value="{Binding RelativeSource={RelativeSource AncestorType=local:Series}, Path=Foreground}" />
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <TransformGroup>
                                <ScaleTransform />
                                <SkewTransform />
                                <RotateTransform />
                                <TranslateTransform />
                            </TransformGroup>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="RenderTransformOrigin" Value="0.5,0.5" />
                    <Style.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ThicknessAnimation Storyboard.TargetProperty="Margin"
                                                        From="-1000,0,0,0"
                                                        To="0,0,0,0"
                                                        Duration="0:0:0.5" />
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                     From="0.5"
                                                     To="1"
                                                     Duration="0:0:0.5" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Style.Triggers>
                </Style>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="{ComponentResourceKey ResourceId=S.MarkLine.Horizontal.Static,
                                        TypeInTargetAssembly={x:Type local:MarkLine}}"
           BasedOn="{StaticResource {x:Static h:MarkLine.DefaultKey}}"
           TargetType="{x:Type local:MarkLine}">
        <Setter Property="PathStyle">
            <Setter.Value>
                <Style TargetType="Path">
                    <Setter Property="StrokeThickness" Value="1" />
                    <Setter Property="StrokeDashArray" Value="5 5" />
                    <Setter Property="Stroke" Value="{Binding RelativeSource={RelativeSource AncestorType=local:Series}, Path=Foreground}" />
                    <Setter Property="Fill" Value="{Binding RelativeSource={RelativeSource AncestorType=local:Series}, Path=Foreground}" />
                </Style>
            </Setter.Value>
        </Setter>

        <Setter Property="TrangleStyle">
            <Setter.Value>
                <Style TargetType="Path">
                    <Setter Property="StrokeThickness" Value="1" />
                    <Setter Property="Stroke" Value="{Binding RelativeSource={RelativeSource AncestorType=local:Series}, Path=Foreground}" />
                    <Setter Property="Fill" Value="{Binding RelativeSource={RelativeSource AncestorType=local:Series}, Path=Foreground}" />
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <TransformGroup>
                                <ScaleTransform />
                                <SkewTransform />
                                <RotateTransform />
                                <TranslateTransform />
                            </TransformGroup>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="RenderTransformOrigin" Value="0.5,0.5" />
                </Style>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="{ComponentResourceKey ResourceId=S.MarkLine.Single,
                                        TypeInTargetAssembly={x:Type local:MarkLine}}"
           BasedOn="{StaticResource {x:Static h:MarkLine.DefaultKey}}"
           TargetType="{x:Type local:MarkLine}" />

    <Style x:Key="{ComponentResourceKey ResourceId=S.MarkLine.Vertical,
                                        TypeInTargetAssembly={x:Type local:MarkLine}}"
           BasedOn="{StaticResource {x:Static h:MarkLine.DefaultKey}}"
           TargetType="{x:Type local:MarkLine}">
        <Setter Property="Orientation" Value="Vertical" />
        <Setter Property="PathStyle">
            <Setter.Value>
                <Style TargetType="Path">
                    <Setter Property="StrokeThickness" Value="1" />
                    <Setter Property="StrokeDashArray" Value="5 5" />
                    <Setter Property="Stroke" Value="{Binding RelativeSource={RelativeSource AncestorType=local:Series}, Path=Foreground}" />
                    <Setter Property="Fill" Value="{Binding RelativeSource={RelativeSource AncestorType=local:Series}, Path=Foreground}" />
                    <Style.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard>
                                    <!--<ThicknessAnimation From="0,0,0,-1000" To="0,0,0,0" Duration="0:0:0.5" Storyboard.TargetProperty="Margin"/>-->
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                     From="0.5"
                                                     To="1"
                                                     Duration="0:0:0.5" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Style.Triggers>
                </Style>
            </Setter.Value>
        </Setter>

        <Setter Property="TrangleStyle">
            <Setter.Value>
                <Style TargetType="Path">
                    <Setter Property="StrokeThickness" Value="1" />
                    <Setter Property="Stroke" Value="{Binding RelativeSource={RelativeSource AncestorType=local:Series}, Path=Foreground}" />
                    <Setter Property="Fill" Value="{Binding RelativeSource={RelativeSource AncestorType=local:Series}, Path=Foreground}" />
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <TransformGroup>
                                <ScaleTransform />
                                <SkewTransform />
                                <RotateTransform />
                                <TranslateTransform />
                            </TransformGroup>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="RenderTransformOrigin" Value="0.5,0.5" />
                    <Style.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard>
                                    <!--<ThicknessAnimation From="0,0,0,-1000" To="0,0,0,0" Duration="0:0:0.5" Storyboard.TargetProperty="Margin"/>-->
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                     From="0.5"
                                                     To="1"
                                                     Duration="0:0:0.5" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Style.Triggers>
                </Style>
            </Setter.Value>
        </Setter>
    </Style>

    <Style BasedOn="{StaticResource {x:Static h:MarkLine.HorizontalKey}}"
           TargetType="{x:Type local:MarkLine}" />
</ResourceDictionary>

