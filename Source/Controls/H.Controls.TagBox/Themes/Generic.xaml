<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:H.Controls.TagBox">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/H.Controls.TagBox;component/TagBox.xaml" />
        <ResourceDictionary Source="pack://application:,,,/H.Controls.TagBox;component/TagFilterBox.xaml" />
        <ResourceDictionary Source="pack://application:,,,/H.Controls.TagBox;component/TagsPresenter.xaml" />
    </ResourceDictionary.MergedDictionaries>
    <DataTemplate DataType="{x:Type local:Tag}">
        <DockPanel>
            <Border Width="10"
                    Margin="0,5,5,5"
                    Background="{Binding Background}" />
            <TextBlock Text="{Binding Name}" />
        </DockPanel>
    </DataTemplate>
</ResourceDictionary>
