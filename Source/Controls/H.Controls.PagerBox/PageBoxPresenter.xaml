<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
                    xmlns:local="clr-namespace:H.Controls.PagerBox"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <DataTemplate DataType="{x:Type local:PageBoxPresenter}">
        <DockPanel Margin="0,10,0,0"
                   DockPanel.Dock="Bottom"
                   LastChildFill="False">
            <TextBlock VerticalAlignment="Center">
                <Run Text="共" />
                <Run Text="{Binding Total}" />
                <Run Text="条" />
            </TextBlock>
            <local:PagerBox HorizontalAlignment="Right"
                            DataCountPerPage="{Binding Limit, Mode=TwoWay}"
                            DockPanel.Dock="Right"
                            MaxPageCount="{Binding TotalPage, Mode=TwoWay}"
                            PageIndex="{Binding Page, Mode=TwoWay}">
                <b:Interaction.Triggers>
                    <b:EventTrigger EventName="PageUpdated">
                        <b:InvokeCommandAction Command="{Binding SearchCommand}" />
                    </b:EventTrigger>
                </b:Interaction.Triggers>
            </local:PagerBox>

            <ComboBox Width="120"
                      DockPanel.Dock="Right"
                      SelectedItem="{Binding Limit, Mode=TwoWay}">
                <b:Interaction.Triggers>
                    <b:EventTrigger EventName="SelectionChanged">
                        <b:InvokeCommandAction Command="{Binding SearchCommand}" />
                    </b:EventTrigger>
                </b:Interaction.Triggers>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock>
                            <Run Text="{Binding ., Mode=OneWay}" />
                            <Run Text="条/页" />
                        </TextBlock>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <sys:Int32>10</sys:Int32>
                <sys:Int32>20</sys:Int32>
                <sys:Int32>50</sys:Int32>
                <sys:Int32>100</sys:Int32>
            </ComboBox>
        </DockPanel>
    </DataTemplate>
</ResourceDictionary>