<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:h="https://github.com/HeBianGu"
                    xmlns:local="clr-namespace:H.Controls.Form.PropertyItems">
    <DataTemplate DataType="{x:Type local:CommandPropertyItem}">
        <Button x:Name="btn"
                HorizontalAlignment="Left"
                Command="{Binding Value}"
                Content="{Binding Description}"
                IsEnabled="{Binding ReadOnly, Converter={x:Static h:Converter.GetTrueToFalse}}">
            <Button.ToolTip>
                <ToolTip>
                    <BulletDecorator>
                        <BulletDecorator.Bullet>
                            <TextBlock Text="{Binding HotKey}" />
                        </BulletDecorator.Bullet>
                        <TextBlock Text="{Binding Description}" />
                    </BulletDecorator>
                </ToolTip>
            </Button.ToolTip>
        </Button>
        <DataTemplate.Triggers>
            <DataTrigger Binding="{Binding Description}"
                         Value="{x:Null}">
                <Setter TargetName="btn" Property="Content" Value="{Binding Name}" />
            </DataTrigger>
        </DataTemplate.Triggers>
    </DataTemplate>
</ResourceDictionary>