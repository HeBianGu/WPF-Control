<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:H.Controls.ImageColorPicker">
    <DataTemplate DataType="{x:Type local:ImageColorPickerBoxPresenter}">
        <Grid>
            <Viewbox>
                <local:ImageColorPickerBox x:Name="p"
                                           ImageSource="{Binding ImageSource}"
                                           Color="{Binding Color, Mode=TwoWay}" />
            </Viewbox>
            <Border Margin="2"
                    Padding="10,6"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    CornerRadius="2">
                <Border.Background>
                    <SolidColorBrush Opacity="0.2"
                                     Color="Black" />
                </Border.Background>
                <TextBlock Foreground="White">
                    <Run Text="颜色：" />
                    <Run Text="{Binding Color}" />
                    <Run Text="    位置：" />
                    <Run Text="{Binding ElementName=p, Path=Position}" />
                </TextBlock>
            </Border>
        </Grid>
    </DataTemplate>
</ResourceDictionary>