<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
                    xmlns:h="https://github.com/HeBianGu"
                    xmlns:local="clr-namespace:H.Controls.OrderBox">
    <DataTemplate DataType="{x:Type local:OrderBase}">
        <DockPanel ToolTip="{Binding Description}">
            <FontIconToggleButton Width="Auto"
                                  Height="Auto"
                                  Margin="5,0,0,0"
                                  Background="Transparent"
                                  BorderThickness="0"
                                  CheckedGlyph="{x:Static FontIcons.Down}"
                                  DockPanel.Dock="Right"
                                  FontSize="10"
                                  IsChecked="{Binding UseDesc}"
                                  UncheckedGlyph="{x:Static FontIcons.Up}">
                <b:Interaction.Triggers>
                    <b:EventTrigger EventName="Click">
                        <b:CallMethodAction MethodName="OnOrderChanged"
                                            TargetObject="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:OrderBox}}}" />
                    </b:EventTrigger>
                </b:Interaction.Triggers>
            </FontIconToggleButton>
            <TextBlock VerticalAlignment="Center"
                       Text="{Binding Name}" />
        </DockPanel>
    </DataTemplate>
</ResourceDictionary>