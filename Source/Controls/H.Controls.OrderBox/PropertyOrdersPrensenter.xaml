<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Behaviors="http://schemas.microsoft.com/xaml/behaviors"
                    xmlns:h="https://github.com/HeBianGu"
                    xmlns:local="clr-namespace:H.Controls.OrderBox"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">
    <DataTemplate DataType="{x:Type local:PropertyOrdersPrensenter}">
        <DockPanel Width="800"
                   Height="400">
            <DockPanel DockPanel.Dock="Top"
                       LastChildFill="False">
                <Button Margin="0,2"
                        HorizontalAlignment="Left"
                        Command="{Binding AddCommand}"
                        Content="添加排序器" />
            </DockPanel>
            <ListBox MinWidth="200"
                     Padding="1"
                     BorderBrush="{DynamicResource {x:Static h:BrushKeys.BorderBrush}}"
                     BorderThickness="1"
                     Cattach.ItemMargin="1 0"
                     Cattach.ItemPadding="10 0 0 0"
                     DockPanel.Dock="Left"
                     ItemsSource="{Binding PropertyOrders}"
                     SelectedItem="{Binding SelectedItem}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <DockPanel>
                            <FontIconButton VerticalAlignment="Center"
                                            DockPanel.Dock="Right"
                                            FontSize="12">
                                <Behaviors:Interaction.Behaviors>
                                    <h:ButtonRemoveItemBehavior />
                                </Behaviors:Interaction.Behaviors>
                            </FontIconButton>
                            <TextBlock VerticalAlignment="Center"
                                       Text="{Binding ID}" />
                        </DockPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Border Margin="1,0"
                    BorderBrush="{DynamicResource {x:Static h:BrushKeys.BorderBrush}}"
                    BorderThickness="1"
                    CornerRadius="{DynamicResource {x:Static LayoutKeys.CornerRadius}}">
                <ContentControl Margin="2"
                                Content="{Binding SelectedItem}" />
            </Border>
        </DockPanel>
    </DataTemplate>

</ResourceDictionary>